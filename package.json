{
  "name": "to-do-post",
  "version": "1.0.1",
  "description": "To Do Post",
  "author": "kk",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "nodemon --watch . --ext js,html,css --exec \"electron .\"",
    "build": "run-s build:*",
    "build:mac64": "electron-builder --mac --x64",
    "build:mac-arm": "electron-builder --mac --arm64",
    "build:win64": "electron-builder --win --x64",
    "build:win64-portable": "electron-builder --win --x64 --dir"
  },
  "build": {
    "productName": "To Do Post",
    "appId": "com.kk.to-do-post",
    "extraFiles": [
      {
        "from": "todolog.txt",
        "to": "resources"
      },
      {
        "from": "settings.json",
        "to": "resources"
      }
    ],
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "icon.png"
    },
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "keywords": [],
  "license": "ISC",
  "devDependencies": {
    "browser-sync": "^3.0.2",
    "electron": "^32.1.0",
    "electron-builder": "^25.1.7",
    "gulp": "^4.0.2",
    "gulp-dart-sass": "^1.1.0",
    "gulp-plumber": "^1.2.1",
    "gulp-sourcemaps": "^3.0.0",
    "nodemon": "^3.1.4",
    "npm-run-all": "^4.1.5"
  }
}
